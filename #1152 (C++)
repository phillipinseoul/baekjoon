#include<iostream>
#include<string>

using namespace std;

int main(){
    string str;
    getline(cin, str);
    int cnt = 0;
    
    // IMPORTANT! if the input is empty
    if (str.empty()){
        cout << cnt;
        return 0;
    }
    
    // check number of spaces => +1 => number of words
    cnt = 1;
    for (int i = 0; i < str.length(); i++){
        if (str[i]==' ') cnt++;
    }
    
    // if there is a space at the front of the string
    if(str[0]==' ') cnt--;
    
    // if there is a space at the end of the string
    if(str[str.length()-1]==' ') cnt--;
    
    // print the result
    cout << cnt;
}
